<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.sign_up"
    android:background="@drawable/sign_up_fragment_srtyle"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/code_verification_lin_verifiy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ادخل رقم الهاتف لارسال كود التاكيد"
                    android:textSize="28sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/janna_lt_bold"/>

                <EditText
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
                    android:drawablePadding="20dp"
                    android:id="@+id/code_verification_txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/janna_lt_bold"
                    android:hint="+20 01*********"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="10dp"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/code_verification_btn_send_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"
                    android:background="@drawable/btn_next"
                    android:fontFamily="@font/janna_lt_bold"
                    android:gravity="center"
                    android:text="ارسال"
                    android:layout_marginVertical="60dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/code_verification_lin_set_phone"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ادخل رقم التاكيد"
                    android:textSize="36dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/titlteFont"
                    android:fontFamily="@font/janna_lt_bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:gravity="center"
                    >
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_verification_txt_number1"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:fontFamily="@font/janna_lt_bold"/>
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:id="@+id/code_verification_txt_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/janna_lt_bold"/>
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_verification_txt_number3"
                        android:textColor="@color/white"
                        android:fontFamily="@font/janna_lt_bold"/>
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_verification_txt_number4"
                        android:textColor="@color/white"
                        android:fontFamily="@font/janna_lt_bold"/>
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_verification_txt_number5"
                        android:textColor="@color/white"
                        android:fontFamily="@font/janna_lt_bold"/>
                    <EditText
                        android:maxLength="1"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_verification_txt_number6"
                        android:textColor="@color/white"
                        android:fontFamily="@font/janna_lt_bold"/>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/code_verification_btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"
                    android:background="@drawable/btn_next"
                    android:fontFamily="@font/janna_lt_bold"
                    android:gravity="center"
                    android:text="تاكيد"
                    android:layout_marginVertical="60dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/code_verification_btn_resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/thirdColor"
                    android:text="اعاده ارسال الكود"
                    android:textSize="18sp"
                    android:fontFamily="@font/janna_lt_bold"
                    android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:drawablePadding="10dp"/>



            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/code_verification_lot_animation"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_rawRes="@raw/vr_ok02"
                app:lottie_autoPlay="true"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.sign_up"
    android:background="@drawable/sign_up_fragment_srtyle"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="قم بالتسجيل الان"
                android:textSize="36dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/titlteFont"
                android:fontFamily="@font/janna_lt_bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_account_circle_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختار صوره"
                android:textColor="@color/thirdColor"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/janna_lt_bold"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاسم الاول"
                android:fontFamily="@font/janna_lt_bold"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/thirdColor"
                android:drawableRight="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:id="@+id/sign_up_first_name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sign_up_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_people_alt_24"
                android:drawablePadding="10dp"
                android:hint="الاسم الاخير"
                android:fontFamily="@font/janna_lt_bold"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/thirdColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginVertical="20dp"
                android:padding="10dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight=".28"
                    android:background="@drawable/spinner_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/postion_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="المركز"
                    android:fontFamily="@font/janna_lt_bold"
                    android:padding="10dp"
                    android:gravity=""
                    android:textSize="18sp"
                    android:textColor="@color/thirdColor"
                    android:drawableRight="@drawable/ic_baseline_grade_24"
                    android:drawablePadding="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="10dp"
                android:hint="تاريخ الميلاد"
                android:fontFamily="@font/janna_lt_bold"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/thirdColor"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_up_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:background="@drawable/btn_next"
                android:fontFamily="@font/janna_lt_bold"
                android:gravity="center"
                android:text="التالي"
                android:layout_marginVertical="20dp"
                android:textColor="@color/white"
                android:textSize="18sp" />




        </LinearLayout>

    </ScrollView>


</LinearLayout>